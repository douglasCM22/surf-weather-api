{
  "name": "surf-weather-api",
  "version": "1.0.0",
  "description": "Typescript Node.js API",
  "keywords": [
    "nodejs",
    "typescript",
    "api"
  ],
  "homepage": "https://github.com/douglasCM22/surf-weather-api#readme",
  "bugs": {
    "url": "https://github.com/douglasCM22/surf-weather-api/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/douglasCM22/surf-weather-api.git"
  },
  "license": "ISC",
  "author": "Douglas Marques",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsc",
    "start": "yarn build && node dist/src/index.js",
    "start:dev": "ts-node-dev src/index.ts",
    "lint": "eslint ./src ./test --ext .ts",
    "lint:fix": "eslint ./src ./test --ext .ts --fix",
    "styleCheck": "prettier --check \"src/**/*.{ts,js}\" \"test/**/*.{ts,js}\"",
    "styleFix": "prettier --write \"src/**/*.{ts,js}\" \"test/**/*.{ts,js}\"",
    "test": "yarn test:unit && yarn test:functional",
    "test:unit": "jest",
    "test:functional": "jest --projects ./test --runInBand",
    "test:unit:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@types/axios": "^0.14.4",
    "@types/bcrypt": "^5.0.2",
    "@types/config": "^3.3.5",
    "@types/express": "^5.0.2",
    "@types/jest": "^29.5.14",
    "@types/module-alias": "^2.0.4",
    "@types/mongoose": "^5.11.97",
    "@types/nock": "^11.1.0",
    "@types/node": "^22.15.21",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.27.0",
    "jest": "^29.7.0",
    "nock": "^14.0.5",
    "prettier": "^3.5.3",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.4",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@overnightjs/core": "^1.7.6",
    "axios": "^1.9.0",
    "bcrypt": "^6.0.0",
    "body-parser": "^2.2.0",
    "config": "^4.0.0",
    "express": "^5.1.0",
    "module-alias": "^2.2.3",
    "mongoose": "^8.15.1"
  }
}
